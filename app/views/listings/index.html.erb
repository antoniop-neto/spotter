<div class="container">
  <%= link_to "Home", root_path %>
  <h1>Available Workation Listings</h1>
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  <br>

    <% @listings.each do |listing| %>
      <strong><%= listing.name %></strong>
        <div class="container">
        <% if listing.photo.attached? %>
          <%= cl_image_tag listing.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
        </div>
        <ul>
          <li><%= "Location: #{listing.location}" %></li>
          <li><%= "Wifi: #{listing.wifi}" %></li>
          <li><%= "Workspace: #{listing.workspace}" %></li>
          <li><%= "Price: #{listing.price}" %></li>
          <li><%= "Host: #{listing.user.first_name} #{listing.user.last_name}" %></li>
          <%= link_to "Book Now", new_booking_path(listing.id), class: "book-button" %>
        </ul>
      <br>
    <% end %>
</div>
